<div id ="wrap">
	<div id ="main">
		<div class="logo">
<%= link_to image_tag("/images/logo2_small.png", :border=>0), '/' %>
</div>
<div id="logging">
	<%= flash_messages %>
<h1>Log in with your account</h1>
<div id="form">
	<div class="field_row">
		<% form_for @user_session, :url => user_session_path do |f| %>
		  <%= f.error_messages %>
		  <%= f.label :login %><br />
		  <%= f.text_field :login %><br />
		  <br />
		  <%= f.label :password %><br />
		  <%= f.password_field :password %><br />
		  <span class="right"><%= link_to "Reset My Password", new_password_reset_path %></div>
		  <br />
		  <p>
		  <%= f.submit "Login" %>
		  </p>
		<% end %>		


<%= link_to "Logout", user_session_path, :method => :delete, :confirm => "Are you sure you want to logout?" %>
	    </div>
	</div>
  </div>
</div>

 
