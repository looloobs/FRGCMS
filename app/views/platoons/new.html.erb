<h1>New platoon</h1>

<% form_for(@platoon) do |f| %>
  <%= f.error_messages %>

  <p>
<%= hidden_field_tag('platoon[battalion_id]', @battalion.id) %>

<%= hidden_field_tag('platoon[company_id]', @company.id) %>
  </p>
  <p>
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </p>
If this platoon is going to be attached to another unit, please choose one of the units below:
  <p>
    <%= f.label :attached_id %><br />
    <%= f.collection_select(:attached_id, @company, :id, :name, {:include_blank => true}) %>
  </p>
  <p>
    <%= f.submit 'Create' %>
  </p>
<% end %>

<%= link_to 'Back', platoons_path %>