<!DOCTYPE HTML PUBLIC "-//W3C//DTD HTML 4.01//EN"    
 "http://www.w3.org/TR/html4/strict.dtd"> 

<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en" lang="en">
<head>
  <meta http-equiv="content-type" content="text/html;charset=UTF-8" />
  <title>FRG Contact Management System</title>
  <%= stylesheet_link_tag 'main' %>
  <%= javascript_include_tag :defaults %>
</head>
<body>					

</body>
</html>
<div id="wrap">
<div id="header">
	<%= render :partial => "shared/user_bar" %>
	<div id="logo">
	
	</div>
	<div id="main_navigation">
		<%= link_to image_tag("/images/logo.png", :border=>0), '/' %>
	<% ubermenu :id => 'main_navigation' do |m| %>	  
    <% if_admin? do %>
	  	<% m.action 'Admin', admin_controls_path %>
		<% end %>
	<% end %>
	</div>
</div>
<div class="dashcolmask dashrightmenu">
	<div class="dashcolleft">
		<div class="dashcol1">
			<!-- Column 1 start -->
			<%= yield %>

			<!-- Column 1 end -->
		</div>
		<div class="dashcol2">
			<!-- Column 1 start -->
			<%= yield :column %>

			<!-- Column 1 end -->
		</div>
	</div>
</div>
<div class="colmask">
	<div class="colleft">
		<div class="col1">
			<!-- Column 1 start -->
			<%= yield :dashboard %>

			<!-- Column 1 end -->
		</div>
	
	</div>
</div>
<div id="footer">
<p>Copyright 2009 Lauren Rothlisberger</p>	
</div>
</div>
<!-- debug -->
<% if Rails.env.development? %>
  <div id="footnotes_holder">
  </div>
  <%= render :partial => 'shared/debug' %>
<% end %>