<div id ="wrap">
	<div id ="main">
		<div class="logo">
<%= link_to image_tag("/images/logo2_small.png", :border=>0), '/' %>
</div>
<div id="logging">
<h1>Log in with your account</h1>
<!-- <p><%= link_to "Login with OpenID", login_with_openid_path %></p>-->
<% form_tag session_path do -%> 
<div id="form">
	<div class="field_row">
		<%= label_tag 'login', "Username" %><br />
		<%= text_field_tag 'login', @login %>
	</div>

	<div class="field_row">
		<%= label_tag 'password' %><br/>
		<%= password_field_tag 'password', nil %>
	</div>
	<p><%= link_to 'Forgot Password?', forgot_password_path %></p>

<% if_recaptcha? do %>
	<div class="field_row">
		<label for="recaptcha">Please enter the following words below.</label>
		<%= recaptcha_tags %><br />
	</div>
<% end %>

  <!--	Stay logged in on this computer:<br/>
	<div class="field_row">
		<%= label_tag 'remember_me', 'Remember me' %>
		<%= check_box_tag 'remember_me', '1', @remember_me %><br />
	</div>-->

	<p><%= submit_tag 'Log in', :disable_with => "Signing in&hellip;" %></p>
<% end -%>
<%= flash_messages %>
