<h1>Listing companies</h1>
<% form_for @search do |f| %>
  <p>
    <%= f.label :name_like, "Name" %><br />
    <%= f.text_field :name_like %>
  </p>
  <p>
    <%= f.label :nickname_like, "NickName" %><br />
    <%= f.text_field :nickname_like %>
  </p>

  <p>
    <%= f.submit "Submit" %>
  </p>
<% end %>
<table>
  <tr>
    <th>Installation</th>
    <th>Battalion</th>
    <th>Name</th>
    <th>Nickname</th>
  </tr>

<% @companies.each do |company| %>
  <tr>
    <td><%=h company.installation_id %></td>
    <td><%=h company.battalion_id %></td>
    <td><%=h company.name %></td>
    <td><%=h company.nickname %></td>
    <td><%= link_to image_tag("../images/buttons/info.png", :border=>0), company %></td>
    <td><%= link_to image_tag("../images/buttons/edit.png", :border=>0), edit_company_path(company) %></td>
    <td><%= link_to 'Destroy', company, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New company', new_company_path %>