<div class ="red"><%= flash_messages %></div>

<h1>Your Sent Messages</h1>

<table id="hor-minimalist-b">


<% @messages.each do |message| %>
  <tr>

    <td><b><%= link_to truncate(message.subject, :length => 20), user_message_path(current_user, message) %></b> </td>
    <td><%= truncate(strip_tags(message.body), :length => 80)%> </td>   
    <td><%= message.created_at.strftime("%B %d %Y") %></td> 
  </tr>
<% end %>
</table>

