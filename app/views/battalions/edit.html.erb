<h1>Editing battalion</h1>

<% form_for(@battalion) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :unit %><br />
    <%= f.text_field :unit %>
  </p>
  <p>
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </p>
  <p>
    <%= f.label :installation %><br />
    <%= f.text_field :installation %>
  </p>
  <p>
    <%= f.submit 'Update' %>
  </p>
<% end %>

<%= link_to 'Show', @battalion %> |
<%= link_to 'Back', battalions_path %>